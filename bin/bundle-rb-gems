#!/usr/bin/env sh

cd ruby/

echo "setting up .rb support.."

bundle --without development

if [ "$?" -gt 0 ]; then
  echo "
WARNING! ruby setup failed- .rb support may not be available.
"
else
  echo "..done"
fi

sed -i="" "s/BUNDLE_WITHOUT:.*$/BUNDLE_WITHOUT: ''/g" .bundle/config

cd ../

echo ""
